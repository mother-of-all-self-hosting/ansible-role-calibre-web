[Unit]
Description=Calibre-Web ({{ calibre_web_identifier }})
{% for service in calibre_web_systemd_required_services_list %}
Requires={{ service }}
After={{ service }}
{% endfor %}
{% for service in calibre_web_systemd_wanted_services_list %}
Wants={{ service }}
{% endfor %}
DefaultDependencies=no

[Service]
Type=simple
Environment="HOME={{ devture_systemd_docker_base_systemd_unit_home_path }}"
ExecStartPre=-{{ devture_systemd_docker_base_host_command_sh }} -c '{{ devture_systemd_docker_base_host_command_docker }} stop -t {{ devture_systemd_docker_base_container_stop_grace_time_seconds }} {{ calibre_web_identifier }} 2>/dev/null || true'
ExecStartPre=-{{ devture_systemd_docker_base_host_command_sh }} -c '{{ devture_systemd_docker_base_host_command_docker }} rm {{ calibre_web_identifier }} 2>/dev/null || true'

{#
  PUID and PGID are specified on env.j2 to run the container as calibre_web_uid:calibre_web_gid
  See: https://github.com/linuxserver/docker-calibre-web/blob/master/README.md#user--group-identifiers
#}
ExecStartPre={{ devture_systemd_docker_base_host_command_docker }} create \
      --rm \
      --name={{ calibre_web_identifier }} \
      --log-driver=none \
      --cap-drop=ALL \
      --cap-add=CAP_DAC_OVERRIDE \
      --cap-add=CHOWN \
      --cap-add=SETGID \
      --cap-add=SETUID \
      --network={{ calibre_web_container_network }} \
      {% if calibre_web_container_http_bind_port %}
      -p {{ calibre_web_container_http_bind_port }}:{{ calibre_web_container_http_port }} \
      {% endif %}
      --env-file={{ calibre_web_base_path }}/env \
      --label-file={{ calibre_web_base_path }}/labels \
      --mount type=bind,src={{ calibre_web_config_path }},dst=/config \
      {% if calibre_web_container_additional_volumes | length == 0 %}
      --mount type=bind,src={{ calibre_web_books_path }},dst=/books \
      {% endif %}
      {% for volume in calibre_web_container_additional_volumes %}
      --mount type={{ volume.type | default('bind' if '/' in volume.src else 'volume') }},src={{ volume.src }},dst={{ volume.dst }}{{ (',' + volume.options) if volume.options | default('') else '' }} \
      {% endfor %}
      {% for arg in calibre_web_container_extra_arguments %}
      {{ arg }} \
      {% endfor %}
      {{ calibre_web_container_image_self_build_name if calibre_web_container_image_self_build else calibre_web_container_image }}

{% for network in calibre_web_container_additional_networks %}
ExecStartPre={{ devture_systemd_docker_base_host_command_docker }} network connect {{ network }} {{ calibre_web_identifier }}
{% endfor %}

ExecStart={{ devture_systemd_docker_base_host_command_docker }} start --attach {{ calibre_web_identifier }}

ExecStop=-{{ devture_systemd_docker_base_host_command_sh }} -c '{{ devture_systemd_docker_base_host_command_docker }} stop -t {{ devture_systemd_docker_base_container_stop_grace_time_seconds }} {{ calibre_web_identifier }} 2>/dev/null || true'
ExecStop=-{{ devture_systemd_docker_base_host_command_sh }} -c '{{ devture_systemd_docker_base_host_command_docker }} rm {{ calibre_web_identifier }} 2>/dev/null || true'

Restart=always
RestartSec=30
SyslogIdentifier={{ calibre_web_identifier }}

[Install]
WantedBy=multi-user.target
